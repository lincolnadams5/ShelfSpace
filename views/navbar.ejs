<!--
    _navbar.ejs
    Navigation bar displayed on all pages (via layout.ejs).
    Contains links to Home, Books, Movies, TV Shows, Games, and TODO list.
    Also displays login/logout based on user authentication status.
-->

<!-- views/navbar.ejs -->
<header>
    <h1 onclick="window.location='/'">ShelfSpace</h1>

    <nav>
        <a href="/books">Books</a>
        <a href="/movies">Movies</a>
        <a href="/games">Games</a>
        <a href="/tv">TV</a>
        <a href="/me/todo">My TODO</a>

        <% if (user) { %>
            <!-- Logged-in state -->
            <span style="margin: 0 8px;">|</span>
            <span class="nav-user">Hi, <%= user.username %></span>
            <a href="/logout">Logout</a>
        <% } else { %>
            <!-- Logged-out state -->
            <a href="/login">Login</a>
            <a id="register-button-header" href="/register">Register</a>
        <% } %>
    </nav>
</header>
